#!/bin/bash

sudo apt-get -y install gimp clementine banshee python pip git comix vim vim-gnome vim-latexsuite wine texlive gtk2-engines-pixbuf vlc zlib1g-dev build-essential libssl-dev libreadline-dev gcc make zlib zlib-devel openssl openssl-devel

sudo add-apt-repository ppa:ubuntu-mozilla-daily/firefox-aurora
sudo add-apt-repository ppa:ubuntu-wine/ppa
sudo add-apt-repository ppa:me-davidsansome/clementine-dev

# Installing rbenv
cd
git clone git://github.com/sstephenson/rbenv.git .rbenv

# Installing Ruby with rbenv
cd /tmp/
wget http://ftp.ruby-lang.org/pub/ruby/1.9/ruby-1.9.3-p286.tar.gz
tar -zxvf ruby-1.9.3-p286.tar.gz

cd ruby-1.9.3-p286/ 
./configure --prefix=$HOME/.rbenv/versions/1.9.3-p286
make
make install

rbenv rehash
rben global 1.9.3-p286
rbenv rehash

cd /tmp/
wget https://gist.github.com/gists/2416601/download
tar -zxvf gist*
cd gist*
gnome-open Terminus-Powerline.ttf

sudo apt-get update
sudo apt-get -y upgrade

